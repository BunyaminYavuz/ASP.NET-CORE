<div class="display-6 text-center">
    Registration Form
</div>

<form method="post" action="/course/register">
    <div class="form-group my-2">
        <label for="Email">Email</label>
        <input type="text" class="form-control" name="Email">
    </div>
    <div class="form-group my-2">
        <label for="FirstName">FirstName</label>
        <input type="text" name="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label for="FirstName">LastName</label>
        <input type="text" name="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label for="Age">Age</label>
        <select class="form-select" name="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
        </select>
    </div>

    <fieldset>
        <legend>Select course</legend>
        <p>
            <input type="radio" name="SelectedCourse" value="ASP.NET Core MVC">
            <label>ASP.NET Core MVC</label>
        </p>
         <p>
            <input type="radio" name="SelectedCourse" value="ASP.NET Core API">
            <label>ASP.NET Core API</label>
        </p>
         <p>
            <input type="radio" name="SelectedCourse" value="C#">
            <label>C#</label>
        </p>
         <p>
            <input type="radio" name="SelectedCourse" value="DESIGN PATTERNS">
            <label>DESIGN PATTERNS</label>
        </p>

    </fieldset>

    <button class="btn btn-primary" type="submit">Register</button>
    <a href="/" class="btn btn-warning">Home</a>
</form>